<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="28dp"
    tools:context=".Post">

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:circularflow_radiusInDP="50dp"
        android:id="@+id/user_default_image"
        android:background="@drawable/circle_view"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_name"
        app:layout_constraintStart_toEndOf="@+id/user_default_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Unblast"
        android:textSize="14sp"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_at_text"
        app:layout_constraintTop_toBottomOf="@+id/account_name"
        app:layout_constraintStart_toEndOf="@+id/user_default_image"
        android:text="2 hrs"
        android:textColor="@color/gray"
        android:paddingHorizontal="8dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/social"
        android:id="@+id/social_image"
        app:layout_constraintStart_toEndOf="@+id/post_at_text"
        app:layout_constraintTop_toTopOf="@id/post_at_text"
        app:layout_constraintBottom_toBottomOf="@id/post_at_text"
        android:padding="8dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/three_dots"
        android:id="@+id/three_dots_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:padding="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_content"
        android:text="Buckle up, because change is coming to WordPress"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/social_image"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_hyper_link"
        android:text="http://unblast.com/color-schemes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_content"
        android:textColor="@color/purple_200"
        android:layout_marginHorizontal="8dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/post_image_yellow"
        app:layout_constraintTop_toBottomOf="@+id/post_hyper_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:background="@color/yellow"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like_count_section"
        app:layout_constraintTop_toBottomOf="@+id/post_image_yellow"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_margin="18dp"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/blue_like_post_icon"
            android:src="@drawable/like"
            android:background="@drawable/blue_circle_view"
            app:layout_constraintTop_toBottomOf="@+id/post_image_yellow"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/blue_like_post_icon"
            android:text="12"
            app:layout_constraintTop_toBottomOf="@+id/post_image_yellow"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/post_image_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/blue_like_post_icon"
            android:text="1 Share"
            app:layout_constraintTop_toBottomOf="@+id/post_image_yellow"
            />
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/share_icon"
            android:background="@drawable/circle_view"
            app:layout_constraintTop_toBottomOf="@+id/post_image_yellow"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_bottom"
            android:layout_marginHorizontal="8dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/horizontal_line_view"
        app:layout_constraintTop_toBottomOf="@+id/like_count_section"
        android:layout_marginVertical="8dp"
        android:background="@color/gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:gravity="fill_horizontal"
        >
        <LinearLayout
            android:id="@+id/like_post_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="24dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dark_like"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:paddingHorizontal="4dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_post_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="24dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/comment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:paddingHorizontal="4dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Share_post_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="24dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:paddingHorizontal="4dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>